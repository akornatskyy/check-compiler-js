{
  "name": "check-compiler",
  "version": "1.3.11",
  "description": "A typescript-first schema rule compiler and validation library.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf --glob tsconfig.tsbuildinfo dist *.tgz",
    "lint": "eslint . --format stylish --ext .ts",
    "test": "jest"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/check-compiler-js",
  "bugs": {
    "url": "https://github.com/akornatskyy/check-compiler-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/check-compiler-js.git"
  },
  "keywords": [
    "check",
    "compiler",
    "rules",
    "schema",
    "validation"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.14",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^56.0.1",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__",
      "!**/dist"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      "tsconfig.*"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "no-null"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "google",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:unicorn/recommended",
      "prettier"
    ],
    "rules": {
      "require-jsdoc": "off",
      "unicorn/prevent-abbreviations": "off"
    }
  }
}
