{
  "name": "check-compiler",
  "version": "1.4.0",
  "description": "A typescript-first schema rule compiler and validation library.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "clean": "rm -rf tsconfig.tsbuildinfo dist *.tgz",
    "lint": "eslint . --format stylish",
    "test": "jest"
  },
  "main": "dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/check-compiler-js",
  "bugs": {
    "url": "https://github.com/akornatskyy/check-compiler-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/check-compiler-js.git"
  },
  "keywords": [
    "check",
    "compiler",
    "rules",
    "schema",
    "validation"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__",
    "!*.tsbuildinfo"
  ],
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.js",
    "types": "./dist/types/index.d.ts"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/__tests__/**",
      "!src/**/*.d.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
