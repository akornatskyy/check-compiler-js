{
  "name": "check-compiler",
  "version": "1.0.0-alpha",
  "description": "Schema validation rule compiler for JS.",
  "author": "Andriy Kornatskyy",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf tsconfig.tsbuildinfo dist *.tgz",
    "test": "jest"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "homepage": "https://github.com/akornatskyy/check-compiler-js",
  "bugs": {
    "url": "https://github.com/akornatskyy/check-compiler-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/akornatskyy/check-compiler-js.git"
  },
  "keywords": [
    "check",
    "compiler",
    "rules",
    "validation"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "!dist/**/__tests__"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "printWidth": 80
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!**/__tests__",
      "!**/dist"
    ],
    "modulePathIgnorePatterns": [
      "dist",
      "tsconfig.*"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    }
  }
}
