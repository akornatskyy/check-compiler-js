{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/cjs",
    "types": ["node", "jest"],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "incremental": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "lib": [
      "ES2017",
    ]
  }
}
